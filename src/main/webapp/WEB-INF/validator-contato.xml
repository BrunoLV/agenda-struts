<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation
       //DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
    <formset>
        <form name="contatoActionForm">
            <field property="nome" depends="required">
                <msg name="required" key="errors.campo.requirido"/>
                <arg name="required" key="${var:campoNome}" position="0" resource="false" />
                <var>
                    <var-name>campoNome</var-name>
                    <var-value>NOME</var-value>
                </var>
            </field>
        </form>
    </formset>
</form-validation>